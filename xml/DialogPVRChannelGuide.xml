<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">11</defaultcontrol>
	<controls>
		<include>PVRChannelNumberInput</include>
		<control type="group">
			<animation effect="fade" start="100" end="0" time="200" tween="sine" condition="$EXP[infodialog_active]">Conditional</animation>
			<control type="group">
				<depth>DepthOSD</depth>
				<include>Animation_BottomSlide</include>
				<include content="ContentPanel">
					<param name="width" value="945" />
					<param name="height" value="460" />
					<param name="top" value="640" />
				</include>
				<control type="image">
					<top>660</top>
					<width>885</width>
					<height>100</height>
					<texture colordiffuse="E6FFFFFF">dialogs/dialog-bg-nobo.png</texture>
				</control>
				<control type="image">
					<left>20</left>
					<top>660</top>
					<width>100</width>
					<height>100</height>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<texture fallback="DefaultTVShows.png">$INFO[Player.Icon]</texture>
				</control>
				<control type="label" id="2">
					<description>header label</description>
					<left>140</left>
					<top>665</top>
					<width>735</width>
					<height>40</height>
					<font>font14</font>
					<textcolor>$VAR[SkinColorVar]</textcolor>
					<label>[B]$INFO[VideoPlayer.ChannelName, $LOCALIZE[19069] : [COLOR white],[/COLOR]][/B]</label>
					<shadowcolor>text_shadow</shadowcolor>
					<scroll>true</scroll>
				</control>
				<control type="label">
					<top>710</top>
					<left>140</left>
					<width>735</width>
					<height>30</height>
					<font>font12</font>
					<textcolor>$VAR[SkinColorVar]</textcolor>
					<label>[B]$INFO[ListItem.StartDate, $LOCALIZE[19128] : [COLOR white],[/COLOR]][/B]</label>
					<scroll>true</scroll>
				</control>
					<control type="fixedlist" id="11">
					<left>0</left>
					<top>760</top>
					<bottom>20</bottom>
					<width>881</width>
					<onleft>60</onleft>
					<onright>60</onright>
					<onup>11</onup>
					<ondown>11</ondown>
					<pagecontrol>60</pagecontrol>
					<scrolltime tween="cubic" easing="out">500</scrolltime>
					<movement>5</movement>
					<focusposition>5</focusposition>
					<itemlayout height="76" width="881">
						<control type="label">
							<left>20</left>
							<width>130</width>
							<bottom>0</bottom>
							<aligny>center</aligny>
							<textcolor>$VAR[SkinColorVar]</textcolor>
							<label>$INFO[ListItem.StartTime,[B],[/B]]</label>
						</control>
						<control type="label">
							<left>130</left>
							<right>20</right>
							<bottom>0</bottom>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]$VAR[SeasonEpisodeLabel, - ]</label>
						</control>
					</itemlayout>
					<focusedlayout height="76" width="881">
						<control type="image">
							<left>0</left>
							<right>0</right>
							<bottom>0</bottom>
							<texture colordiffuse="$VAR[SkinColorVar]">lists/focus.png</texture>
							<visible>Control.hasFocus(11)</visible>
						</control>
						<control type="image">
							<left>0</left>
							<right>0</right>
							<bottom>0</bottom>
							<texture colordiffuse="$VAR[GradientColorVar]">lists/focus-gradient.png</texture>
							<visible>Control.hasFocus</visible>
							<visible>Skin.HasSetting(EnableGradientColor)</visible>
						</control>
						<control type="label">
							<left>20</left>
							<width>130</width>
							<bottom>0</bottom>
							<aligny>center</aligny>
							<textcolor>$VAR[SkinColorVar]</textcolor>
							<label>$INFO[ListItem.StartTime,[B],[/B]]</label>
						</control>
						<control type="label">
							<left>130</left>
							<right>20</right>
							<bottom>0</bottom>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]$VAR[SeasonEpisodeLabel, - ]</label>
						</control>
					</focusedlayout>
				</control>
				<control type="scrollbar" id="60">
					<top>760</top>
					<bottom>7</bottom>
					<left>875</left>
					<width>6</width>
					<onleft>11</onleft>
					<orientation>vertical</orientation>
				</control>
				<include>PVRChannelInfoPanel</include>
			</control>
		</control>
	</controls>
</window>

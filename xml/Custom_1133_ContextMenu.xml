							<top>10</top>
							<height>40</height>
							<left>20</left>
							<right>20</right>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
							<font>font13</font>
							<shadowcolor>text_shadow</shadowcolor>
						</control>
					</itemlayout>
					<content limit="5" sortby="lastplayed" sortorder="descending">pvr://channels/tv/*?view=lastplayed</content>

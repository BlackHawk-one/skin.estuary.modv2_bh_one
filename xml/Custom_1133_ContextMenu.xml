					<width>510</width>
					<texture colordiffuse="dialog_tint">colors/white.png</texture>
				</control>
				<control type="list" id="11">
					<onleft>11</onleft>
					<onright>11</onright>
					<onup>11</onup>
					<ondown>11</ondown>
